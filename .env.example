# ===========================================
# Repository Pattern - Environment Variables
# ===========================================

# Application Mode
# Set to "true" to use PostgreSQL, "false" for in-memory
USE_POSTGRES=false

# ===========================================
# PostgreSQL Database Configuration
# ===========================================

# Database connection URL
# Format: postgres://username:password@host:port/database
DATABASE_URL=postgres://postgres:password@localhost:5432/repository_pattern

# Maximum number of connections in the pool
DATABASE_MAX_CONNECTIONS=10

# Connection timeout in seconds
DATABASE_CONNECT_TIMEOUT=30

# ===========================================
# Application Settings
# ===========================================

# Rust log level (trace, debug, info, warn, error)
RUST_LOG=info

# Application environment (development, staging, production)
APP_ENV=development

# ===========================================
# Server Configuration (for future web server)
# ===========================================

# Server host
# SERVER_HOST=0.0.0.0

# Server port
# SERVER_PORT=8080

# ===========================================
# Security (for future implementation)
# ===========================================

# JWT secret key
# JWT_SECRET=your-secret-key-here

# Session timeout in hours
# SESSION_TIMEOUT=24

# ===========================================
# Development Settings
# ===========================================

# Enable debug mode
DEBUG=true

# Enable SQL query logging
# SQL_LOG=true
